<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movieDetails"
            type="com.exercise.davismiyashiro.popularmovies.moviedetails.MovieDetailsObservable"/>
        <variable
            name="callback"
            type="com.exercise.davismiyashiro.popularmovies.movies.MovieListAdapter.OnMovieClickListener"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:imgUrl="@{movieDetails.posterPath}"
            android:onClick="@{() -> callback.getMovieClicked(movieDetails)}"
            tools:src="@tools:sample/cities" />

    </FrameLayout>
</layout>