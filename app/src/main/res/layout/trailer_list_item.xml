<layout>
    <data>
        <variable
            name="trailer"
            type="com.exercise.davismiyashiro.popularmovies.data.Trailer"/>
        <variable
            name="trailerCallback"
            type="com.exercise.davismiyashiro.popularmovies.moviedetails.TrailerListAdapter.OnTrailerClickListener"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trailer_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/trailer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@{trailer.name}"
            android:onClick="@{() -> trailerCallback.onTrailerClick(trailer)}"/>
    </LinearLayout>
</layout>